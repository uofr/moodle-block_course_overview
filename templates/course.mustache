{{!
    @template block_course_overview/courselist

    This template renders the course list for the course_overview block

    Example context (json):
    {}
}}
<div id="course-{{ id }}" class="courseovbox row-fluid" data-courseid="{{ id }}">
    <div class="col-12 span12">

        <div class="d-flex flex-row">
            {{# isediting }}
                <i class="icon fa fa-fw fa-arrows cursor" title="{{# str }}movecourse, block_course_overview, {{ fullname }}{{/ str }}"></i>
            {{/ isediting }}
            {{^ isediting }}
                <a href="#" class="favourite_icon text-primary {{ isfavourite }}" alt="{{ favouritealt }}" data-courseid="{{ id }}">
                    <i class="icon fa fa-fw {{ favouriteicon }} " title="{{ favouritealt }}"></i>
                </a>
            {{/ isediting }}
            <h5 class="overview-title"><a {{^ visible }}class="dimmed"{{/ visible }} href="{{ link }}">{{ fullname }}</a></h5><br />
            <small>{{ categories }}</small>
        </div>
        <div class="mb-2">
            {{# contacts }}
                {{{ profilelink }}}
            {{/ contacts }}
        </div>
        
        <div>
            {{^ hasoverviews }}
                <span>{{# str }} nonotif, block_course_overview {{/ str }}</span>
            {{/ hasoverviews }}
            {{# hasoverviews }}
                <div class="mb-2">
                    <span>{{# str }} newnotif, block_course_overview {{/ str }}</span>
                    (<a href="#" class="overview-toggle">{{# str }} showdetail, block_course_overview {{/ str }}</a>)
                </div>
                <div class="activity-overviews overview-hide">
                    {{# overviews }}
                        <div class="activity-overview">
                            <span class="overview-icon" data-id="#{{ overviewid }}">{{{ icon }}}</span>
                            <span class="overview-description">{{ description }}</span>
                            <div class="overview-text">
                                {{{ text }}}
                            </div>
                        </div>
                    {{/ overviews }}
                </div>
            {{/ hasoverviews }}
        </div>

    </div>
</div>
