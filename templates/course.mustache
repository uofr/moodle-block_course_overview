{{!
    @template block_course_overview/courselist

    This template renders the course list for the course_overview block

    Example context (json):
    {}
}}
<div id="course-{{ id }}" class="courseovbox row-fluid">
    <div class="col-12 span12">

        <div class="d-flex flex-row">
            {{# isediting }}
                <i class="icon fa fa-fw fa-arrows cursor" title="{{# str }}movecourse, block_course_overview, {{ fullname }}{{/ str }}"></i>
            {{/ isediting }}
            {{^ isediting }}
                <a href="#" class="favourite_icon text-primary {{ isfavourite }}" alt="{{ favouritealt }}" data-courseid="{{ id }}">
                    <i class="icon fa fa-fw {{ favouriteicon }} " title="{{ favouritealt }}"></i>
                </a>
            {{/ isediting }}
            <h5 class="overview-title"><a {{^ visible }}class="dimmed"{{/ visible }} href="{{ link }}">{{ fullname }}</a></h5><br />
            <small>{{ categories }}</small>
        </div>
        <div class="mb-2">
            {{# contacts }}
                {{{ profilelink }}}
            {{/ contacts }}
        </div>
        
        <div>
            {{^ hasoverviews }}
                <span>{{# str }} nonotif, block_course_overview {{/ str }}</span>
            {{/ hasoverviews }}
            {{# hasoverviews }}
                <div class="mb-2">
                    <span>
                        {{# str }} newnotif, block_course_overview {{/ str }}
                        (<a href="#" data-toggle="collapse" data-target=".multicollapse-{{id}}" class="course-detail-collapse" aria-expanded="false">{{# str }} showdetail, block_course_overview {{/ str }}</a>)
                    </span>
                </div>
                {{# overviews }}
                    <span class="overview-icon" data-id="#{{ overviewid }}">
                        {{{ icon }}}
                        <span class="activity-description" style="display: none;">{{ description }}</span>
                    </span>
                    <div class="collapse multicollapse-{{id}}">
                        {{{ text }}}
                    </div>
                {{/ overviews }}
            {{/ hasoverviews }}
        </div>

    </div>
</div>
